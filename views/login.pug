include  header
div(class='wrap')
        div(class='content')
                header(class='site-header')
                        include site_header_order.pug

                div(class='container')
                        div(class='row')
                                div(class="col col-md-4")

                                        form(action="/login", method="POST")
                                                div(class="form-control")
                                                        label(for="login") Login
                                                        input(
                                                                type="text",
                                                                name="login",
                                                                id="login",
                                                                placeholder="enter your login",
                                                                value="admin"
                                                        )
                                                div(class="form-control")
                                                        label(for="password") Password
                                                        input(
                                                                type="password",
                                                                id="password",
                                                                value="12345",
                                                                name="password"
                                                        )

                                                div(class="form-control")
                                                        button(class="button-primary",  type="submit", value="login") sign in

        include footer.pug






